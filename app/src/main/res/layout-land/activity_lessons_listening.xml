<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">


    <TextView
        android:id="@+id/lesson_listeningTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/lesson_1"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listeningDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAlignment="viewStart"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="17sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countDownText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="30dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>



        <SeekBar
            android:id="@+id/positionBar"
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:progressTint="@color/red"
            android:thumbTint="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/elapsedTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="260dp"
                android:text="0:11"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/remainingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="1:11"
                android:textColor="@color/white"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/report_rectangle_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/questionTitle"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:text="Here are questions"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"/>

                <RadioGroup
                    android:id="@+id/radiogroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="horizontal">


                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:buttonTint="@color/white"
                        android:textColor="@color/white"
                        android:id="@+id/alt1"
                        android:checked="false" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="B"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/alt2"
                        android:checked="false"
                        android:buttonTint="@color/white"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:text="C"
                        android:buttonTint="@color/white"
                        android:textColor="@color/white"
                        android:id="@+id/alt3"
                        android:checked="false" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:gravity="right">

                <Button
                    android:id="@+id/back"
                    android:layout_width="130dp"
                    android:background="@drawable/button_background"
                    android:layout_height="wrap_content"
                    android:text="Back"/>

                <Button
                    android:id="@+id/next"
                    android:layout_width="130dp"
                    android:background="@drawable/button_background"
                    android:layout_height="wrap_content"
                    android:text="@string/next" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/answerdQuestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1/4"
            android:gravity="center"
            android:textSize="20dp"/>

    </LinearLayout>

</LinearLayout>
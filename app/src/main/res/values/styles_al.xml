<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- style and animation for result dialog -->
    <style name="resultDialogStyle" parent="@android:style/Theme.Holo.Light.Panel">
        <item name="android:windowAnimationStyle">@style/animation</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="animation">
        <item name="android:windowEnterAnimation">@anim/result_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/result_dialog_exit</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/prim_color_pearl_500</item>
        <item name="android:textColor">@color/prim_color_pearl_500</item>
        <item name="android:textColorPrimary">@color/prim_color_pearl_500</item>
    </style>

    <style name="navigationView_textSize_for_tablet" >
        <item name="android:textSize">20sp</item>
    </style>

    <!--string  -->

    <!-- ratingbar in lessons row -->
    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">22dip</item>
        <item name="android:maxHeight">22dip</item>
        <item name="android:progressDrawable">@drawable/rating_trophy</item>
    </style>




</resources>